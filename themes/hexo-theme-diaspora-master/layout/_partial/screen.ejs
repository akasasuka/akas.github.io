<% var first = page.posts.sort("date", "desc").eq(0);nun =Math.round(Math.random()*20); %>
<div id="screen">

    <div id="mark">
        <div class="layer" data-depth="0.4">
            <%- image_tag(theme.welcome_cover || first.cover || theme.cover[nun], {id: "cover", crossorigin: "anonymous", width: 1920, height: 1080}) %>
        </div>
    </div>

    <div id="vibrant">
        <!--
		<svg viewbox="0 0 2880 1620" height="100%" preserveaspectratio="xMaxYMax slice">
            <polygon opacity="0.7" points="2000,1620 0,1620 0,0 600,0 "/>
        </svg>
		iconfont icon-search switchsearch 
		iconfont icon-menu switchmenu
		-->
        <div<a class ="left carousel-control switchmenu" href="#"></a></div>
    </div>


    <div id="header">
        <div>
            <a class="image-logo switchmenu" href="#"></a>
			<div id="timebox"><span id="time" class="icon-time"></span></div>
			<!--<% if (theme.local_search.enable){ %>
			<div class="iconfont icon-search switchsearch" href="/search/" title="搜索"></div>
			<%}%>-->
            <div class="iconfont icon-menu switchmenu"></div>
        </div>
    </div>
    <% if ( first ) { %>
    <div id="post0">
        <p><%- first.date.locale("zh-cn").format("MMMM DD, YYYY") %></p>
        <h2><%- link_to(first.path, first.title || config.title, {class: "posttitle"}) %></h2>
        <p class="summary"><%- truncate(strip_html(first.content), {length: 60, omission: '...'}) %></p>
        
    </div>
    <% } %>
</div>
